@model List<Model.ViewModel.ProductViewModel>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="modal fade" id="myModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="myModalBody">

        </div>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-body" style="padding:30px;">
        <div id="grid" class="target"></div>
    </div>
</div>
<div id="myMenu">
    <ul class="menu-items">
        <li class="detail">Detail</li>
        <li class="edit">Edit</li>
        <li class="delete">Delete</li>
    </ul>
</div>
<style type="text/css">
    #myMenu {
        position: absolute;
        border: solid 1px #CCC;
        width: 100px;
        background: #EEE;
        box-shadow: 2px 3px 3px #9b9b9b;
        border-radius: 1px;
        z-index: 10000;
        display: none;
    }

    .menu-items {
        list-style: none;
        margin: 0px;
        padding: 5px 1px 3px 1px;
        color: black;
    }

    .detail, .edit, .delete {
        padding: 8px;
        padding-left: 30px;
        font-size: 12px;
        font-family: 'Segoe UI';
    }

    .menu-items li:hover {
        color: white;
        background: #9b9b9b;
        border-radius: 2px;
        cursor: pointer;
    }
</style>

@section scripts{
    <script src="~/Scripts/kendo.all.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var dataProduct = @Html.Raw((Model != null) ? Newtonsoft.Json.JsonConvert.SerializeObject(Model) : "[]");
            $("#grid").kendoGrid({
                dataSource: dataProduct,
                height: 350,
                pageable: {
                    pageSizes: [5, 10, 20],
                    pageSize: 5
                },
                sortable: {
                    mode: "single",
                    allowUnsort: false
                },
                dataBound: onDataBound,
                toolbar: ["search"],
                search: {
                    fields: ["Name", "Code", "CateName"]
                },
                columns: [
                    {
                        field: "Code",
                        title: "Code",
                        width: 80,
                    }, {
                        field: "Name",
                        title: "Name",
                        width: 250
                    }, {
                        field: "CateName",
                        title: "Category",
                        width: 200
                    }, {
                        field: "MetaTitle",
                        title: "MetaTitle",
                        width: 250
                    }, {
                        field: "Price",
                        title: "Price",
                        format: "{0:c}",
                        width: 120
                    }, {
                        field: "Quantity",
                        title: "Quantity",
                        width: 90
                    }]
            });
        });

        function onDataBound(e) {
            var grid = this;
            grid.table.find("tr").each(function () {
                var dataID = grid.dataItem(this).ID;
                $(this).closest('tr').addClass("row_" + dataID + "");

                $("#myMenu").kendoContextMenu({
                    target: ".row_" + dataID + "",
                    animation: {
                        open: { effects: "fadeIn" },
                        duration: 500
                    }
                });
                var contextMenu = $("#myMenu").data("kendoContextMenu");
                contextMenu.bind("open", function () {
                    $('.detail').off('click').on('click', function (e) {
                        e.preventDefault();
                        $('#myMenu').hide();
                        $.get("/Product/DetailProduct", { id: dataID }, function (res) {
                            $("#myModalBody").html(res);
                            $("#myModal").modal('show');
                        })
                    })
                    $('.edit').off('click').on('click', function (e) {
                        e.preventDefault();
                        $('#myMenu').hide();
                        $.get("/Product/EditProduct", { id: dataID }, function (res) {
                            $("#myModalBody").html(res);
                            $("#myModal").modal('show');
                        })
                    })
                    $('.delete').off('click').on('click', function (e) {
                        e.preventDefault();
                        $('#myMenu').hide();
                        $.ajax({
                            url: "/Product/DeleteProduct",
                            data: { id: dataID },
                            dataType: 'json',
                            type: 'POST',
                            success: function (res) {
                                if (res.status == true) {
                                    $(".row_" + dataID + "").remove();
                                    alert("Delete Success...");
                                } else {
                                    alert("Delete Error...");
                                }
                            }
                        })
                    })
                });
            });
        }
    </script>

    <script type="text/javascript">
        function updateProduct(id) {
            var form = $('form[name="productForm"]');
            var newForm = form.add('<input name="ID" value="' + id + '" /> ');
            var data = newForm.serialize();
            $.post("/Product/UpdateProduct", data, function (res) {
                if (res == true) {
                    window.location.href = "/Product/Index";
                } else {
                    $("#myModalBody").html(res);
                    $("#myModal").modal('show');
                }
            })
        }
    </script>

    <script type="text/javascript">
        function openSuccessModal(strMessage) {
            var myDiv = document.getElementById("MyModalSuccessAlertBody");
            myDiv.innerHTML = strMessage;
            $('#myModalSuccess').modal('show');
        }
        $(document).ready(function () {
            var msg = "@TempData["SuccessMessage"]";
            if (msg)
                openSuccessModal(msg);
        });
    </script>

}


